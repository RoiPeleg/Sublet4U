<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68bed2">

    <include
        android:id="@+id/clientToolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/dislike"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:icon="@drawable/ic_unlike"
        app:iconGravity="textEnd"
        app:iconSize="35dp"
        app:iconTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/like"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/like"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:layout_marginEnd="16dp"
        android:isScrollContainer="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:icon="@drawable/ic_like"
        app:iconGravity="textEnd"
        app:iconSize="35dp"
        app:iconTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />


    <ImageView
        android:id="@+id/midImage"
        android:layout_width="190dp"
        android:layout_height="230dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameInImg"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:text="Apartment Name"
        android:textColor="#0009ff"
        android:textColorHint="#0009ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/addressInImg"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:text="Address"
        android:textColor="#0009ff"
        android:textColorHint="#0009ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <TextView
        android:id="@+id/descriptionInImg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:text="Description"
        android:textColor="#0009ff"
        android:textColorHint="#0009ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/yourName"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:textColor="#0009ff"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/price"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="Price"
        android:textColor="#0009ff"
        android:textColorHint="#0009ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <TextView
        android:id="@+id/displayArrive"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Arrive Date"
        android:textColor="#0009ff"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <TextView
        android:id="@+id/displayLeave"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:layout_marginEnd="27dp"
        android:gravity="center"
        android:text="Leave Date"
        android:textColor="#0009ff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <TextView
        android:id="@+id/showTheArrive"
        android:layout_width="159dp"
        android:layout_height="85dp"
        android:text="Set here your arrive date"
        android:textColor="#0009ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/showTheLeave"
        android:layout_width="172dp"
        android:layout_height="90dp"
        android:layout_marginEnd="25dp"
        android:text="Set here your leave date"
        android:textColor="#0009ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <Button
        android:id="@+id/ratingOfThisApa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.781" />

    <TextView
        android:id="@+id/textGrade"
        android:layout_width="154dp"
        android:layout_height="39dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="497dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>